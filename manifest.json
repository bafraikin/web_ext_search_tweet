
{

  "manifest_version": 2,
  "name": "Search Twitter",
  "version": "1.0",

  "description": "une extension pour rechercher dans les tweets des mots cl√©s",
  "homepage_url": "https://github.com///",
  "icons": {
    "48": "icons/beasts-48.png"
  },



    "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["search.js"]
    }
  ],
   "permissions": ["activeTab", "tabs"],


  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Search twitter",
    "default_popup": "popup/menu.html"
  }

}

